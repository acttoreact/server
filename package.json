{
  "name": "server",
  "version": "0.3.0",
  "description": "Application logic and runtime server",
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "load": "artillery run -o ./test/tasks/log/report.json ./test/tasks/load-test.yaml",
    "load-report": "artillery report ./test/tasks/log/report.json",
    "build": "tsc",
    "dev": "NODE_ENV=development ts-node-dev --debug --respawn --transpileOnly ./index.ts",
    "docker-build-dev": "IMAGE=$npm_package_name-dev:latest;docker build --rm --pull -f \"./docker/dev/Dockerfile\" -t $IMAGE \".\"",
    "docker-build-prod": "IMAGE=$npm_package_name:latest;docker build --rm --pull -f \"./docker/prod/Dockerfile\" -t $IMAGE \".\"",
    "docker-start-dev": "IMAGE=$npm_package_name-dev:latest;docker run -it -d -v $INIT_CWD/server:/usr/src/app/server $IMAGE",
    "docker-start-prod": "IMAGE=$npm_package_name:latest;docker run -it -d -v $INIT_CWD/server:/usr/src/app/src/server $IMAGE",
    "docker-start-dev-from-hub": "IMAGE=act2react/server:version-$npm_package_version-dev;docker run -it -d -v $INIT_CWD/server:/usr/src/app/server $IMAGE",
    "docker-start-prod-from-hub": "IMAGE=act2react/server:version-$npm_package_version;docker run -it -d -v $INIT_CWD/server:/usr/src/app/src/server $IMAGE",
    "docker-stress-test": "docker stop server-dev;docker rm server-dev;IMAGE=server-dev:latest;docker run -it -d -v $INIT_CWD/test/mocks/stress-server:/usr/src/app/server -p 4000:4000 --name server-dev $IMAGE",
    "start": "node ./bin/index.js",
    "lint": "npx eslint --config ./.eslintrc ./**/*.ts",
    "test": "jest",
    "test-clear": "rm -rf coverage;rm -rf bin",
    "test-dev": "NODE_ENV=development npx jest --watch",
    "test-coverage": "jest --coverage",
    "test-coverage-dev": "NODE_ENV=development jest --coverage --watchAll",
    "coveralls": "jest --coverage && cat ./coverage/lcov.info | coveralls",
    "test-full": "npm run test-clear;npm run build;npm run test;npm run test-coverage;npm run lint;npm audit;npm run docs",
    "docs": "jsdoc -c jsdoc.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/acttoreact/server.git"
  },
  "keywords": [
    "acttoreact",
    "a2r",
    "server",
    "logic",
    "ws"
  ],
  "author": "Act to React (https://a2r.com/)",
  "license": "MIT",
  "homepage": "https://a2r.com/",
  "dependencies": {
    "@a2r/telemetry": "^1.0.29",
    "chalk": "^4.0.0",
    "express": "^4.17.1",
    "socket.io": "^2.2.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.6",
    "@types/jest": "^25.2.2",
    "@types/node": "^14.0.1",
    "@types/socket.io": "^2.1.4",
    "@types/socket.io-client": "^1.4.33",
    "@typescript-eslint/eslint-plugin": "^2.33.0",
    "@typescript-eslint/parser": "^2.33.0",
    "artillery": "^1.6.0",
    "babel-jest": "^25.5.1",
    "better-docs": "^2.0.1",
    "coveralls": "^3.0.11",
    "eslint": "^7.0.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.20.0",
    "jest": "^25.5.1",
    "jsdoc": "^3.6.3",
    "shortid": "^2.2.15",
    "socket.io-client": "^2.3.0",
    "ts-jest": "^25.5.1",
    "ts-node-dev": "^1.0.0-pre.40",
    "typescript": "^3.9.2",
    "wait-for-expect": "^3.0.2"
  }
}
